{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.6",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "https://example.com/avatar.png",
              "size": "Small",
              "style": "Person"
            }
          ]
        },
        {
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "Column Title",
              "weight": "Bolder",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "Column subtitle",
              "isSubtle": true,
              "wrap": true
            }
          ]
        }
      ]
    }
  ]
}
