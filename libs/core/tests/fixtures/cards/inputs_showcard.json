{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.6",
  "body": [
    {
      "type": "Input.Text",
      "id": "inputName",
      "label": "Your name",
      "isRequired": true
    },
    {
      "type": "Input.ChoiceSet",
      "id": "inputChoice",
      "label": "Pick one",
      "choices": [
        { "title": "Option A", "value": "a" },
        { "title": "Option B", "value": "b" }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Expandable",
      "wrap": true
    }
  ],
  "actions": [
    {
      "type": "Action.ShowCard",
      "title": "More",
      "card": {
        "type": "AdaptiveCard",
        "body": [
          { "type": "TextBlock", "text": "Inside show card", "wrap": true }
        ],
        "actions": [
          {
            "type": "Action.Submit",
            "title": "Submit",
            "data": {
              "level": "inner"
            }
          }
        ]
      }
    }
  ]
}
