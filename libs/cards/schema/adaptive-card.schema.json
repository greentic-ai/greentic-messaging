{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Teams Adaptive Card payload",
  "type": "object",
  "required": [
    "type",
    "version",
    "body"
  ],
  "properties": {
    "type": {
      "const": "AdaptiveCard"
    },
    "version": {
      "type": "string"
    },
    "$schema": {
      "type": "string"
    },
    "body": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/bodyElement"
      }
    },
    "actions": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/action"
      },
      "default": []
    }
  },
  "additionalProperties": true,
  "$defs": {
    "bodyElement": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "TextBlock",
            "FactSet",
            "Image"
          ]
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "TextBlock"
              }
            }
          },
          "then": {
            "required": [
              "text"
            ],
            "properties": {
              "text": {
                "type": "string"
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "FactSet"
              }
            }
          },
          "then": {
            "required": [
              "facts"
            ],
            "properties": {
              "facts": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "title",
                    "value"
                  ],
                  "properties": {
                    "title": {
                      "type": "string"
                    },
                    "value": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "Image"
              }
            }
          },
          "then": {
            "required": [
              "url"
            ],
            "properties": {
              "url": {
                "type": "string"
              }
            }
          }
        }
      ],
      "additionalProperties": true
    },
    "action": {
      "type": "object",
      "required": [
        "type",
        "title"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Action.OpenUrl",
            "Action.Submit"
          ]
        },
        "title": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "data": {}
      },
      "additionalProperties": true
    }
  }
}

